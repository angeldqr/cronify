		{
			"name": "3. Eventos - CRUD",
			"item": [
				{
					"name": "Listar Eventos",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/eventos/",
							"host": ["{{base_url}}"],
							"path": ["api", "eventos", ""]
						}
					},
					"response": []
				},
				{
					"name": "Crear Evento",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"evento_id\", jsonData.id);",
									"    console.log(\"Evento creado con ID: \" + jsonData.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"asunto\": \"Renovación de Licencia de Software\",\n    \"descripcion\": \"Renovar licencia antes del vencimiento para evitar interrupciones\",\n    \"fecha_vencimiento\": \"2025-12-31T23:59:59Z\",\n    \"notificacion_valor\": 15,\n    \"notificacion_unidad\": \"días\",\n    \"es_publico\": true\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/eventos/",
							"host": ["{{base_url}}"],
							"path": ["api", "eventos", ""]
						}
					},
					"response": []
				},
				{
					"name": "Ver Evento Específico",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/eventos/{{evento_id}}/",
							"host": ["{{base_url}}"],
							"path": ["api", "eventos", "{{evento_id}}", ""]
						}
					},
					"response": []
				},
				{
					"name": "Actualizar Evento",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"asunto\": \"Renovación de Licencia - Actualizado\",\n    \"descripcion\": \"Descripción actualizada del evento\",\n    \"fecha_vencimiento\": \"2025-12-31T23:59:59Z\",\n    \"notificacion_valor\": 30,\n    \"notificacion_unidad\": \"días\",\n    \"es_publico\": true\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/eventos/{{evento_id}}/",
							"host": ["{{base_url}}"],
							"path": ["api", "eventos", "{{evento_id}}", ""]
						}
					},
					"response": []
				},
				{
					"name": "Eliminar Evento (Soft Delete)",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/eventos/{{evento_id}}/",
							"host": ["{{base_url}}"],
							"path": ["api", "eventos", "{{evento_id}}", ""]
						}
					},
					"response": []
				}
			]
